/**
 *
 * @author Windows 8.1
 */
public class Rekrusif {
    public static void dectobin(int num){
        if(num > 0){//jika num lebih dari 0
            dectobin(num / 2);//maka dectobin(num / 2)
            System.out.println(num % 2);//menampilkan num % 2
        }
    }
    public static void main(String[] args) {
        dectobin(8);//untuk menampilkan hasil
    }
}
