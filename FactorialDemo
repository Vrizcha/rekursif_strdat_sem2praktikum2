/**
 *
 * @author Windows 8.1
 */
public class FaktorialDemo {
    public static int Faktorial(int x){
        if(x == 1)//jika x = 1
        return x;// maka return nilai x
        else// jika tidak
            return x * Faktorial(x -1);//rerurn x * faktorial(x-1)
    }
    public static void main(String[] args) {
        Scanner input = new Scanner (System.in);//scanner
        System.out.println("N = ");//menampilkan
        int n = input.nextInt() ;//menginput nilai
        System.out.println("Hasil= " + Faktorial(n));//menampilkan hasil
    }
        
    
    
}
