 * @author Windows 8.1
 */
public class Rekrusif9 {
    public static int mystery(int a, int b){
        if(b == 0) return 0;//jika b sama dengan 0 maka return 0
        if(b % 2 == 0)return mystery(a+a, b/2);
        return mystery(a+a, b/2) + a;//merreturn
    }
    
    public static void main(String[] args) {
        System.out.println(mystery(12, 4));
    }
 
}
